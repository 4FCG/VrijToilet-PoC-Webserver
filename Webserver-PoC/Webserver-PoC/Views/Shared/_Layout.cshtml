<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <div id="page-flexer">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="~/home/index">Vrij Toilet</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{string currentController = ViewContext.RouteData.Values["Controller"].ToString(); }

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(currentController == "home" ? "active" : "")">
                        <a class="nav-link" href="~/home/index">Home</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown nav-item @(currentController == "Sensors" ? "active" : "")">
                            <a class="nav-link dropdown-toggle" role="button" id="sensorDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">Sensoren</a>
                            <ul class="dropdown-menu">
                                @Html.ActionLink("Sensor overzicht", "Index", "Sensors", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Sensor toevoegen", "Create", "Sensors", null, new { @class = "dropdown-item" })
                            </ul>
                        </li>
                        <li class="dropdown nav-item @(currentController == "Metingen" ? "active" : "")">
                            <a class="nav-link dropdown-toggle" role="button" id="metingDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">Metingen</a>
                            <ul class="dropdown-menu">
                                @Html.ActionLink("Meting overzicht", "Index", "Metingen", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Meting toevoegen", "Create", "Metingen", null, new { @class = "dropdown-item" })
                            </ul>
                        </li>
                    }
                    else
                    {
                        @Html.ActionLink("Sensors", "Index", "Sensors", null, new { @class = String.Concat("nav-item nav-link ", currentController == "Sensors" ? "active" : "") })
                        @Html.ActionLink("Metingen", "Index", "Metingen", null, new { @class = String.Concat("nav-item nav-link ", currentController == "Metingen" ? "active" : "") })
                    }

                    @if (User.Identity.IsAuthenticated)
                    //logged in
                    {
                        <li class="dropdown nav-item @(currentController == "Account" ? "active" : "")">
                            <a class="nav-link dropdown-toggle" role="button" id="accountDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @Html.ActionLink("Account", "edit", "Account", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "dropdown-item" })
                            </ul>
                        </li>
                    }
                    //not logged in
                    else
                    {
                        <li class="nav-item @(currentController == "Account" ? "active" : "")">
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div id="body-content">
            @RenderBody()
        </div>

        <div id="footer">
            <div style="float:left">Vrij Toilet - Zuyd Hogeschool</div>
            <div style="float:right">© Copyright 2020. No Rights Reserved</div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
