@model Webserver_PoC.Models.Meting

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="login-container" class="bg-light">
    <fieldset>
        @using (Html.BeginForm())
        {
            <legend>Toevoegen</legend>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Ontvangen timestamp</label>
                @Html.EditorFor(model => model.received_timestamp, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.received_timestamp, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Meting aantal</label>
                @Html.EditorFor(model => model.meting_count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.meting_count, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Sensor</label>
                @Html.DropDownList("sensor_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sensor_id, "", new { @class = "text-danger" })
            </div>

            <div class="btn-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Terug", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </fieldset>
</div>
